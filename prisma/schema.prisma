datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int        @id @default(autoincrement())
  email     String     @unique
  username  String     @unique
  password  String
  messages  Message[]
  chatRooms ChatRoom[] @relation("UsersInChatRooms")
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}

model ChatRoom {
  id        Int       @id @default(autoincrement())
  name      String?   @unique  // Ensure room names are unique
  users     User[]    @relation("UsersInChatRooms")
  messages  Message[]
  createdAt DateTime  @default(now())
}

model Message {
  id         Int      @id @default(autoincrement())
  content    String
  user       User     @relation(fields: [userId], references: [id])
  userId     Int
  chatRoom   ChatRoom @relation(fields: [chatRoomName], references: [name])
  chatRoomName String  // Use room name (string) instead of ID for room referencing
  createdAt  DateTime @default(now())
}
